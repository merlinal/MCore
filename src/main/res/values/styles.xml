    <!--dialog样式-->
    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--底部弹出-->
    <style name="anim_from_bottom" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/out_to_bottom</item>
    </style>

    <!--淡入淡出-->
    <style name="anim_alpha_scale" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/show_alpha_scale</item>
        <item name="@android:windowExitAnimation">@anim/hide_alpha_scale</item>
    </style>

